{
  "name": "BankrWallet",
  "version": "0.1.1",
  "manifest_version": 3,
  "description": "BankrWallet",
  "homepage_url": "https://x.com/apoorveth",
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@bankr.wallet"
    }
  },
  "action": {
    "default_title": "BankrWallet",
    "default_icon": {
      "128": "./icons/icon128.png"
    },
    "default_popup": "popup-init.html"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "background": {
    "service_worker": "static/js/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "static/js/inject.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "static/js/inpage.js"
      ],
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
